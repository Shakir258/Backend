<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>First Express Project</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md outline-none px-5 py-2 mt-2 bg-zinc-800" name="title" type="text"
                    placeholder="title">
                <textarea class="block w-full rounded-md outline-none px-5 py-2 mt-2 resize-none bg-zinc-800"
                    placeholder="write your task description" name="description"></textarea>
                <input class="mt-5 px-5 py-2 bg-blue-600 rounded-md" type="submit" value="Create Task">
            </form>
        </div>

        <div class="tasks p-10 flex flex-wrap gap-5">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val, key) { %>
                    <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800" key="<%= key %>">
                        <h1 class="text-white text-3xl tracking-tighter" ><%= val%></h1>
                        <a href="/file/<%= val %>" class="text-blue-600 inline-block mt-2" >Read more</a>
                    </div>
                <% }); %>
            <% } else { %>
                <h2 class="text-white">No tasks available</h2>
            <% } %>
        </div>
    </div>
</body> 

</html>
